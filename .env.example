# EduRipple Backend Environment Configuration
# Copy this file to .env and populate with your actual values
# DO NOT commit .env to version control

# Flask Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False

# AI Services
GEMINI_API_KEY=your-gemini-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# ElevenLabs Text-to-Speech (Free tier: 10,000 chars/month)
# Get your API key at: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_DEFAULT_VOICE=rachel

# YouTube API
YOUTUBE_API_KEY=your-youtube-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///curriculum.db
TEACHERS_DB=teachers.db

# Production Database (PostgreSQL)
# Uncomment and configure for production
# DATABASE_URL=postgresql://user:password@localhost:5432/eduripple
# DB_POOL_SIZE=10

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=200 per day, 50 per hour

# Caching
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# API Configuration
API_TIMEOUT=30
MAX_CONTENT_LENGTH=16777216

# App URL (used in CORS, OpenRouter referer, etc.)
APP_URL=https://yourdomain.com

# CORS Origins (comma-separated, * for all in dev)
CORS_ORIGINS=*
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limit Storage (use Redis in production)
# RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD_HASH=
